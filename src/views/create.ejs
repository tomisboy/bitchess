<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF8">
        <title>bit-Chess</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link href="css/homepage.css" rel="stylesheet">
        <link href="css/create.css" rel="stylesheet">
        <link href="css/login.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    </head>

    <body>
        <%- include('./header.ejs') %>
        <div>
            <i class="card-icon back-arrow bi bi-arrow-left" onclick="location.href='homepage'"></i>
        </div>
        <!--Creating Flex Grid-->
        <div class="flex-parent-element">
            <!--Creating Flex Grid Element-->
            <div class="flex-child-element">
                <!--Create new game card-->
                <div class="create-card-wrap">
                    <div class="create-card-wrapper">
                        <div class="create-card">
                            <i class="card-icon bi bi-plus"></i>
                            <div class="center-wrap">
                                <div class="section text-center">
                                    <h4 class="mb-4 pb-3">Create a new game</h4>
                                    <!--Create a game form-->
                                    <form action="/creategame" method="POST">
                                        <div class="form-group">
                                            <input type="text" name="roomname" class="form-style" placeholder="Gameroom name" id="roomname" autocomplete="off" required>
                                            <i class="input-icon bi bi-input-cursor-text"></i>
                                        </div>
                                        <br>
                                        <h6 class="mb-0 pb-3"><span>Public game</span><span>Private game</span></h6>
                                        <input class="checkbox" type="checkbox" id="tooglemode" name="tooglemode"/>	
                                        <label for="tooglemode"></label>
                                        <button type="submit" href="#" class="btn mt-4">Create!</button>
                                        <% if(messages.error) {messages.error} %>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('./footer.ejs') %>
    </body>
</html>