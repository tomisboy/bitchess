<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF8">
        <title>bit-Chess</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link href="css/homepage.css" rel="stylesheet">
        <link href="css/create.css" rel="stylesheet">
        <link href="css/login.css" rel="stylesheet">
        <link href="css/profile.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    </head>

    <body>
        <%- include('./header.ejs') %>
        <div>
            <i class="card-icon back-arrow bi bi-arrow-left" onclick="location.href='homepage'"></i>
        </div>
        <!--Creating Flex Grid-->
        <div class="flex-parent-element">
            <!--Creating Flex Grid Element-->
            <div class="flex-child-element">
                <!--Create new game card-->
                <div class="create-card-wrap" style="height: 550px;">
                    <div class="create-card-wrapper">
                        <div class="create-card">
                            <i class="card-icon bi bi-gear-fill"></i>
                            <div class="center-wrap">
                                <div class="section text-center">
                                    <h4 class="mb-4 pb-3">Configurate</h4>
                                    <h5 class="pb-3 ">User: <%= username %> </h5>
                                    <!--Create a game form-->
                                    <form action="/changecredentials" method="POST">
                                        <div class="form-group">
                                            <input type="text" name="newusername" class="form-style" placeholder="new username" id="newusername" autocomplete="off">
                                            <i class="input-icon bi bi-person-fill"></i>
                                        </div>
                                        <br>
                                        <div class="form-group">
                                            <input type="text" name="newemail" class="form-style" placeholder="new email" id="newemail" autocomplete="off">
                                            <i class="input-icon bi bi-envelope-fill"></i>
                                        </div>
                                        <br>
                                        <div class="form-group">
                                            <input type="text" name="newpassword" class="form-style" placeholder="new password" id="newpassword" autocomplete="off">
                                            <i class="input-icon bi bi-lock-fill"></i>
                                        </div>
                                        <button type="submit" href="#" class="btn mt-4">Change!</button>
                                        <% if(messages.error) {messages.error} %>
                                    </form>
                                    <br>
                                    <form action="/deleteuser" method="POST">
                                        <button class="deletebtn">
                                            <i class="delete-icon bi bi-trash-fill" data-toggle="tooltip" data-placement="bottom" title="Delete your user"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('./footer.ejs') %>
    </body>
</html>