<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF8">
        <title>bit-Chess</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link href="css/homepage.css" rel="stylesheet">
        <link href="css/homepage.css" rel="stylesheet">
        <link href="css/create.css" rel="stylesheet">
        <link href="css/login.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
        <script src="https://cdn.socket.io/4.4.1/socket.io.min.js" integrity="sha384-fKnu0iswBIqkjxrhQCTZ7qlLHOFEgNkRmK2vaO/LbTZSXdJfAu6ewRBdwHPhBo/H" crossorigin="anonymous"></script>
        <script src="/js/socketClient.js"></script>
    </head>

    <body>
        <%- include('./header.ejs') %>
        <div>
            <i class="card-icon back-arrow bi bi-arrow-left" onclick="location.href='join'"></i>
        </div>
        <!--Creating new flexbox-->
        <div class="flex-container">
            <!--creating new flexitem-->
            <div class="flex-item">
                <!--Create new game card-->
                <div class="create-card-wrap">
                    <div class="create-card-wrapper">
                        <div class="create-card">
                            <i class="card-icon bi bi-plus"></i>
                            <div class="center-wrap">
                                <div class="section text-center">
                                    <h4 class="mb-4 pb-3">Join a Game</h4>
                                    <!--Join a game form-->
                                    <form id="joinPrivateForm" action="/joinchessgame" method="POST">
                                        <div class="form-group">
                                            <input type="text" name="room" class="form-style" placeholder="Gameroom id" id="room" autocomplete="off" required>
                                            <i class="input-icon bi bi-input-cursor-text"></i>
                                        </div>
                                        <br>
                                        <button type="submit" href="#" class="btn mt-4">Join!</button>
                                        <% if(messages.error) {messages.error} %>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('./footer.ejs') %>
    </body>
</html>